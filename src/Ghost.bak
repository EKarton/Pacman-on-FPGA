module CharacterRegister(
	input [7:0] x_in,
	input [7:0] y_in,
	input [1:0] dir_in,
	output reg [7:0] x_out,
	output reg [7:0] y_out,
	output reg [1:0] dir_out,
	input readwrite,
	input clock_50,
	input reset);
	
	initial
	begin
		x_out = 8'd0;
		y_out = 8'd0;
		dir_out = 2'd0;
	end

	always @(posedge clock_50) 
	begin
		if (reset == 1'b1) 
		begin
			x_out <= 8'd0;
			y_out <= 8'd0;
			dir_out <= 2'd0;			
		end
		else if (readwrite == 1'b1) 
		begin
			x_out <= x_in;
			x_out <= y_in;
			dir_out <= dir_in;
		end
	end
endmodule